<p id="notice"><%= notice %></p>

<h1><%= book.title %>のページ一覧</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_pages.each do |book_page| %>
      <tr>
        <td class="with-image"><img width="200" src="<%= book_page.image.url %>"></td>
        <td class="with-button"><%= link_to '削除', book_page_path(book_id: book.id,id: book_page.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ページ新規作成', new_book_page_path %>
