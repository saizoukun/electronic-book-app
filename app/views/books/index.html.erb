<p id="notice"><%= notice %></p>

<h1>さいぞうの電子書籍店</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>概要</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= link_to '説明', book_path(id: book.id) %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_book_path %>
